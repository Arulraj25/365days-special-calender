pipeline {
    agent any
    
    environment {
        AWS_REGION = 'us-east-1'
        EC2_INSTANCE_ID = 'your-instance-id'  # Will be updated by Terraform output
        EC2_SSH_KEY = 'special-days-key.pem'
        GIT_REPO = 'https://github.com/yourusername/special-days-calendar.git'
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: env.GIT_REPO,
                    credentialsId: 'github-credentials'
            }
        }
        
        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve tfplan'
                    
                    // Get outputs
                    script {
                        def tfOutput = sh(
                            script: 'terraform output -json',
                            returnStdout: true
                        )
                        def outputs = readJSON text: tfOutput
                        
                        env.EC2_PUBLIC_IP = outputs.instance_public_ip.value
                        env.EC2_INSTANCE_ID = outputs.instance_id.value
                        env.APP_URL = outputs.app_url.value
                        
                        // Update instance ID for future deployments
                        currentBuild.description = "Deployed to ${env.EC2_PUBLIC_IP}"
                    }
                }
            }
        }
        
        stage('Deploy Application') {
            steps {
                script {
                    withCredentials([sshUserPrivateKey(
                        credentialsId: 'ec2-ssh-key',
                        keyFileVariable: 'SSH_KEY',
                        usernameVariable: 'SSH_USER'
                    )]) {
                        // Copy files to EC2
                        sh """
                            rsync -avz -e "ssh -i ${SSH_KEY} -o StrictHostKeyChecking=no" \
                            --exclude='.git' \
                            --exclude='terraform' \
                            --exclude='jenkins' \
                            . ec2-user@${env.EC2_PUBLIC_IP}:/home/ec2-user/special-days-calendar/
                        """
                        
                        // Deploy on EC2
                        sh """
                            ssh -i ${SSH_KEY} -o StrictHostKeyChecking=no \
                            ec2-user@${env.EC2_PUBLIC_IP} \
                            'cd /home/ec2-user/special-days-calendar && \
                            docker-compose down && \
                            docker-compose build --no-cache && \
                            docker-compose up -d'
                        """
                    }
                }
            }
        }
        
        stage('Health Check') {
            steps {
                script {
                    // Wait for application to start
                    sleep 30
                    
                    // Check frontend
                    sh """
                        curl -f -s http://${env.EC2_PUBLIC_IP} || exit 1
                    """
                    
                    // Check backend
                    sh """
                        curl -f -s http://${env.EC2_PUBLIC_IP}:5000/api/health || exit 1
                    """
                }
            }
        }
    }
    
    post {
        success {
            echo "Deployment successful! Application URL: http://${env.EC2_PUBLIC_IP}"
            // Optional: Send notification
            // slackSend(color: 'good', message: "Deployment successful: http://${env.EC2_PUBLIC_IP}")
        }
        failure {
            echo "Deployment failed!"
            // slackSend(color: 'danger', message: 'Deployment failed!')
        }
        always {
            // Clean up
            cleanWs()
        }
    }
}